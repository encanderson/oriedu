{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Basic setup to api development",
  "main": "index.js",
  "author": "Anderson Oliveira <and.orisistem@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify --exit-child src/index.ts | pino-pretty -c",
    "test": "jest --detectOpenHandles",
    "commit": "git-cz",
    "db": "prisma db push --schema ./prisma/school.prisma && prisma db push --schema ./prisma/auth.prisma && prisma db push --schema ./prisma/admin.prisma",
    "migrate": "prisma migrate dev --schema ./prisma/school.prisma && prisma migrate dev --schema ./prisma/auth.prisma && prisma migrate dev --schema ./prisma/admin.prisma"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.11.12",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-local": "^1.0.34",
    "@types/sharp": "^0.29.5",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "pino-pretty": "^7.3.0",
    "prettier": "^2.0.5",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@prisma/client": "3.0.2",
    "accesscontrol": "^2.2.1",
    "aws-sdk": "^2.1120.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "nodemailer": "6.6.5",
    "passport": "^0.5.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "prisma": "3.0.2",
    "redis": "3.0.2",
    "redoc-express": "^1.0.0",
    "sharp": "^0.29.3",
    "underscore": "^1.13.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "xlsx": "^0.17.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "backup": "@prisma/client: 3.0.2"
}
