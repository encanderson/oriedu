generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URI")
}



model User {
  id         String   @id @default(uuid())
  userId     String   @unique
  active     Boolean
  app        String
  code       Int?
  createdAt  DateTime
  email      String   @unique
  password   String
  job        String
  updatedAt  DateTime
  consents   Json?
  profile    Profile?

  @@map("users")
}

model Profile {
  id          String   @id @default(uuid())
  city        String?
  contacts    String?
  name        String
  usersId     String?  @unique(map: "profiles_usersId_unique")
  picture     String?
  user        User?    @relation(fields: [usersId], references: [id])

  @@map("profiles")
}
