generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URI")
}



model User {
  id         String   @id @default(uuid())
  user_id    String   @unique
  active     Boolean
  app        String
  code       Int?
  createdAt  DateTime
  email      String   @unique
  password   String
  updatedAt  DateTime
  consents   Json?

  @@map("users")
}

model School {
  id          String   @id @default(uuid())
  cnpj        String
  fantasia    String
  logo        String?
  city        String
  state       String
  contacts    Json?
  address     Json?
  school      Profile[]
  
  @@map("schools")
}

model Profile {
  id          String   @id @default(uuid())
  user_id     String   @unique
  name        String
  job         String?
  picture     String?
  school_id   String
  school      School   @relation(fields: [school_id], references: [id])

  @@map("profiles")
}
