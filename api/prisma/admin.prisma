generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@internal/prisma/admin"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_ADMIN")
}

model Admin {
  id              String   @id @default(uuid())
  user_id         String   @unique
  password        String

  @@map("admin")
}

model Questions {
  id              String   @id @default(uuid())
  name            String
  subject         String
  email           String
  user_id         String
  message         String
  system          String

  @@map("questions")
}